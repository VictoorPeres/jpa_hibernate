<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <persistence-unit name="jpa_hibernate">

   <class>br.com.avancard.model.UsuarioPessoa</class>

  <properties>
    <property name="hibernate.connection.driver_class" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
    <property name="hibernate.connection.url" value="jdbc:sqlserver://localhost:1433;databaseName=java_hibernate;encrypt=true;trustServerCertificate=true" />
    <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />
    <property name="hibernate.connection.username" value="sa" />
    <property name="hibernate.connection.password" value="@dminti35" />
    <property name="hibernate.format_sql" value="false" />
    <property name="hibernate.show_sql" value="true" />
    <property name="hibernate.hbm2ddl.auto" value="update" />
    <!-- minimo de conexoes ou portas disponiveis -->
    <property name="hibernate.c3p0.min_size" value="10"/>
    <!-- maximo de conexoes ou portas disponiveis -->
    <property name="hibernate.c3p0.max_size" value="100"/>
    <!-- numero de segundos que uma conexao inativa Ã© mantida no pool -->
    <property name="hibernate.c3p0.timeout" value="300"/>
    <!-- numero total de instrucoes, transacoes, operacoes no banco de dados mantida em cache  -->
    <property name="hibernate.c3p0.max_statements" value="50"/>
    <!-- tempo ocioso em segundos antes de uma conexao ser validada automaticamente -->
    <property name="hibernate.c3p0.idle_test_period" value="120"/>
  </properties>
  </persistence-unit>
</persistence>
